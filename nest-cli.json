{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "root": "apps",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "scripts/",
        "watchAssets": true
      },
      {
        "include": "ecosystem.config.js",
        "watchAssets": true
      }
    ],
    "webpack": true
  },
  "projects": {
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "sourceRoot": "apps/admin/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "sourceRoot": "apps/api/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "finance-service": {
      "type": "application",
      "root": "apps/finance-service",
      "entryFile": "main",
      "sourceRoot": "apps/finance-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/finance-service/tsconfig.app.json"
      }
    },
    "game-service": {
      "type": "application",
      "root": "apps/game-service",
      "entryFile": "main",
      "sourceRoot": "apps/game-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/game-service/tsconfig.app.json"
      }
    },
    "file-service": {
      "type": "application",
      "root": "apps/file-service",
      "entryFile": "main",
      "sourceRoot": "apps/file-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/file-service/tsconfig.app.json"
      }
    },
    "cronjobs": {
      "type": "application",
      "root": "apps/cronjobs",
      "entryFile": "main",
      "sourceRoot": "apps/cronjobs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cronjobs/tsconfig.app.json",
        "assets": [
          {
            "include": "**/token.json",
            "watchAssets": true
          }
        ]
      }
    },
    "senders": {
      "type": "application",
      "root": "apps/senders",
      "entryFile": "main",
      "sourceRoot": "apps/senders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/senders/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.hbs",
            "watchAssets": true
          },
          {
            "include": "**/*.png",
            "watchAssets": true
          }
        ]
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}