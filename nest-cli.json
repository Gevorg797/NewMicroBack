{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "root": "apps",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "scripts/",
        "watchAssets": true
      },
      {
        "include": "ecosystem.config.js",
        "watchAssets": true
      },
      {
        "include": "apps/api/src/bots/bik-bet/images/**/*",
        "outDir": "dist/apps/api/images",
        "watchAssets": true
      }
    ],
    "webpack": true
  },
  "projects": {
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "sourceRoot": "apps/admin/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "sourceRoot": "apps/api/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}
